<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:scrollbars="vertical"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/fileHelp"
             android:orientation="vertical"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:paddingRight="15dp"
             android:paddingLeft="15dp"
             android:paddingBottom="15dp"
             android:shrinkColumns="1"
        >
    <TableRow android:layout_width="fill_parent">
        <ImageView android:id="@+id/icon1" android:layout_width="24dip" android:layout_height="24dip"
                   android:layout_margin="5dip" android:src="@drawable/allow"  />

        <TextView android:id="@+id/help1" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Allow messages from a sender"
                  android:layout_gravity="center_vertical" />
    </TableRow>
    <TableRow  android:layout_width="fill_parent">
        <ImageView android:id="@+id/icon2" android:layout_width="24dip" android:layout_height="24dip"
                    android:src="@drawable/restrict" />
        <TextView android:id="@+id/help2" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Restrict messages from a sender"
                  android:layout_gravity="center_vertical"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent">
        <ImageView android:id="@+id/icon3" android:layout_width="24dip" android:layout_height="24dip"
                   android:src="@drawable/rose_button" />
        <TextView android:id="@+id/help3" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="I use this icon for my wife's messages"
                  android:layout_gravity="center_vertical"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent">
        <ImageView android:id="@+id/icon3" android:layout_width="24dip" android:layout_height="24dip"
                   android:src="@drawable/roseoff_button" />
        <TextView android:id="@+id/help3" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="And this means show default icon"
                  android:layout_gravity="center_vertical"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent">
        <ImageView android:id="@+id/icon4" android:layout_width="24dip" android:layout_height="24dip"
                   android:src="@drawable/sound" />
        <TextView android:id="@+id/help4" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Notify as usual"
                  android:layout_gravity="center_vertical"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent">
        <ImageView android:id="@+id/icon5" android:layout_width="24dip" android:layout_height="24dip"
                   android:src="@drawable/nosound" />
        <TextView android:id="@+id/help5" android:layout_height="wrap_content"
                  android:text="Only show the icon, no sound or vibration"
                  android:layout_gravity="center_vertical"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent">
        <ImageView android:id="@+id/icon6" android:layout_width="20dip" android:layout_height="20dip"
                   android:src="@drawable/magnifier" />
        <TextView android:id="@+id/help6" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Search for sender by Name or Number"
                  android:layout_gravity="center_vertical"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent">
        <ImageView android:id="@+id/icon7" android:layout_width="20dip" android:layout_height="20dip"
                   android:src="@drawable/refresh" />
        <TextView android:id="@+id/help7" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Load new contacts from the phone book and sms storage, all existing will be kept"
                  android:layout_gravity="center_vertical"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent">
        <ImageView android:id="@+id/icon9" android:layout_width="20dip" android:layout_height="20dip"
                   android:src="@drawable/clear" />
        <TextView android:id="@+id/help9" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Set all checkboxes to defaults, applied immediately"
                  android:layout_gravity="center_vertical"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent">
        <ImageView android:id="@+id/icon1" android:layout_width="20dip" android:layout_height="20dip"
                   android:layout_margin="5dip" android:src="@drawable/save"  />

        <TextView android:id="@+id/help1" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="You can find saved xml in sdcard/TinyMessageFilter/Senders folder"
                  android:layout_gravity="center_vertical" />
    </TableRow>

    <!--Button android:id="@+id/Button01" android:layout_marginLeft="35dip" android:layout_marginRight="35dip"
            android:layout_height="38dip" android:text="Close"></Button-->
</TableLayout>
</ScrollView>